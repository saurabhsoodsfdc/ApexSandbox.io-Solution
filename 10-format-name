public String formatName(String firstName, String lastName) {
    if(String.isBlank(firstName) && String.isNotBlank(lastName)) {
        return lastName;
    } else if(String.isNotBlank(firstName) && String.isBlank(lastName)) {
        return firstName;
    }  else if(String.isBlank(firstName) && String.isBlank(lastName)) {
        return '';
    } else {
        return lastName + ', '+ firstName;
    }


}